<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Войти</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div class="col s12 login" id="login">
            <h2>Войти в магазин</h2>
            <form action="/auth/login" method="POST" class="col s12">
                <div class="input-field col s12">
                    <i class="fa fa-at prefix" aria-hidden="true"></i>
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter email" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <i class="fa fa-key prefix" aria-hidden="true"></i>
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="price">Password</label>
                    <span class="helper-text" data-error="Enter password" data-success="right"></span>
                </div>
                <button class="btn waves-effect waves-light" type="submit">Войти
                </button>
            </form>
        </div>
        <div class="col s12 register" id="register">
            <h2>Регистрация</h2>
            <form action="/auth/register" method="POST" class="col s12">
                <div class="input-field col s12">
                    <i class="fa fa-at prefix" aria-hidden="true"></i>
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter email" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <i class="fa fa-header prefix" aria-hidden="true"></i>
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Enter your name" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <i class="fa fa-key prefix" aria-hidden="true"></i>
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rprice">Password</label>
                    <span class="helper-text" data-error="Enter password" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <i class="fa fa-key prefix" aria-hidden="true"></i>
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Password again</label>
                    <span class="helper-text" data-error="Enter password again" data-success="right"></span>
                </div>
                <button class="btn waves-effect waves-light" type="submit">Зарегистрироваться
                </button>
            </form>
        </div>
    </div>
</div>