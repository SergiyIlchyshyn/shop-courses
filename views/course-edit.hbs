<h1>Edit {{course.title}}</h1>

<div class="row">
    <form action="/courses/edit" method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <i class="fa fa-header prefix" aria-hidden="true"></i>
                <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
                <label for="title">Course title</label>
                <span class="helper-text" data-error="Enter title" data-success="right"></span>
            </div>
            <div class="input-field col s12">
                <i class="fa fa-usd prefix" aria-hidden="true"></i>
                <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
                <label for="price">Price</label>
                <span class="helper-text" data-error="Enter price" data-success="right"></span>
            </div>
            <div class="input-field col s12">
                <i class="fa fa-picture-o prefix" aria-hidden="true"></i>
                <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
                <label for="img">Image URL</label>
                <span class="helper-text" data-error="Enter URL" data-success="right"></span>
            </div>

            <input type="hidden" name="id" value="{{course.id}}">

            <button class="btn waves-effect waves-light" type="submit" name="action">Save
            </button>
            <button class="btn waves-effect waves-light" type="reset" name="action">Reset
            </button>
        </div>
    </form>

    
    <form action="/courses/remove" method="POST">
        <input type="hidden" name="id" value="{{course.id}}">
        <button type="submit" class="btn red">Delete</button>
    </form>
    
</div>